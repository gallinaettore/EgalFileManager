<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="spinnerStyle">@style/MySpinnerStyle</item>
        <item name="buttonStyle">@style/ColoredButton</item>
        <item name="imageButtonStyle">@style/ColoredButton</item>
        <item name="alertDialogTheme">@style/AlertDialogCustom</item> <!-- android:alertDialogTheme da problemi su android 4 -->
        <item name="android:spinnerStyle">@style/MySpinnerStyle</item>
        <item name="android:buttonStyle">@style/ColoredButton</item>
        <item name="android:imageButtonStyle">@style/ColoredButton</item>
        <item name="android:colorPrimary" tools:targetApi="lollipop">@color/colorPrimary</item>
        <item name="android:colorAccent" tools:targetApi="lollipop">@color/colorAccent</item>
        <item name="android:windowBackground">@color/sfondo_generale</item>
        <item name="android:checkboxStyle">@style/MyCheckBoxStyle</item>

        <!-- Custom attrs -->
        <item name="backgroundColorNomeSezione">@color/sfondo_nome_sezione_main</item>
        <item name="colorNomeCategoria">@color/nome_categoria</item>
        <item name="colorFabMain">@color/fab_main</item>
        <item name="colorMainBackground">@color/main_background</item>
        <item name="backgroundColorViewAnteprima">@color/background_view_anteprima</item>
        <item name="baseTintColor">@color/base_tint_color</item>
        <item name="colorSitoWeb">@color/testo_sito_web</item>
        <item name="colorIconeDispositivi">@color/icone_dispositivi</item>
        <item name="backgroundAlbum">@drawable/album</item>
    </style>


    <style name="MySpinnerStyle" parent="Widget.AppCompat.Spinner">
        <item name="android:background">@drawable/spinner_background</item>
    </style>


    <style name="ColoredButton" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textColor">@color/colored_button_text_color</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/colored_button</item>
        <item name="android:paddingLeft">18dp</item>
        <item name="android:paddingRight">18dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingTop">12dp</item>
    </style>


    <style name="ColoredButton.LowPadding">
        <item name="android:minHeight">15dp</item>
        <item name="android:minWidth">15dp</item>
        <item name="android:padding">5dp</item>
    </style>


    <style name="ColoredButton.Small">
        <item name="android:minHeight">18dp</item>
        <item name="android:minWidth">24dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:paddingBottom">9dp</item>
        <item name="android:paddingTop">9dp</item>
    </style>


    <style name="AppTheme.FullScreen" parent="@style/AppTheme">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>


    <style name="SplashTheme" parent="AppTheme.FullScreen">
        <item name="android:windowBackground">@android:color/black</item>
    </style>


    <style name="AlertDialogCustom" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:colorPrimary" tools:targetApi="lollipop">@color/colorAccent</item>
        <item name="colorPrimary" tools:targetApi="lollipop">@color/colorAccent</item>
        <item name="android:colorAccent" tools:targetApi="lollipop">@color/colorAccent</item>
        <item name="colorAccent" tools:targetApi="lollipop">@color/colorAccent</item>
        <item name="android:background">@color/sfondo_generale</item>
        <item name="android:textColorPrimary">@color/dialog_text_color</item>
    </style>


    <style name="MyCheckBoxStyle" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:textColor">@color/dialog_text_color</item>
    </style>


    <style name="ActivityDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="windowNoTitle">true</item>
        <item name="android:colorPrimary" tools:targetApi="lollipop">@color/colorAccent</item>
        <item name="colorPrimary" tools:targetApi="lollipop">@color/colorAccent</item>
        <item name="android:colorAccent" tools:targetApi="lollipop">@color/colorAccent</item>
        <item name="colorAccent" tools:targetApi="lollipop">@color/colorAccent</item>
    </style>


    <style name="EditTextRicerca" parent="@style/Widget.AppCompat.EditText">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorHint">#8AFFFFFF</item>
        <item name="android:textCursorDrawable">@android:color/white</item>  // Cursor
    </style>

    <style name="ImageViewer" parent="@style/AppTheme">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>


    <!-- Dialog bianca con scritte nere, sia per tema scuso che per tema light -->
    <style name="DialogCreditLicense" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- Used for the buttons -->
        <item name="android:colorAccent" tools:targetApi="lollipop">#424242</item>
        <item name="android:textColor">#424242</item>
        <!-- Used for the background -->
        <item name="android:background">#FFFFFF</item>
    </style>














    <!-- DARK -->


    <!-- Base application theme. -->
    <style name="AppThemeDark" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/colorPrimary_DarkTheme</item>
        <item name="colorPrimaryDark">@color/colorPrimary_DarkTheme</item>
        <item name="colorAccent">@color/colorAccent_DarkTheme</item>

        <item name="spinnerStyle">@style/MySpinnerStyle</item>
        <item name="buttonStyle">@style/ColoredButton</item>
        <item name="alertDialogTheme">@style/AlertDialogCustomDark</item> <!-- android:alertDialogTheme da problemi su android 4 -->
        <!--<item name="android:alertDialogStyle">@style/AlertDialogCustom</item>-->

        <item name="android:spinnerStyle">@style/MySpinnerStyle</item>
        <item name="android:buttonStyle">@style/ColoredButton</item>
        <!--<item name="android:buttonStyleToggle">@style/ColoredToggleButton</item>-->
        <item name="android:colorPrimary" tools:targetApi="lollipop">@color/colorPrimary_DarkTheme</item>
        <item name="android:colorAccent" tools:targetApi="lollipop">@color/colorAccent_DarkTheme</item>
        <item name="android:windowBackground">@color/sfondo_generale_dark</item>
        <item name="android:checkboxStyle">@style/MyCheckBoxStyleDark</item>

        <item name="android:textColor">@color/text_color_dark</item>
        <item name="android:navigationBarColor" tools:targetApi="lollipop">#000000</item>

        <!-- Custom attrs -->
        <item name="backgroundColorNomeSezione">@color/sfondo_nome_sezione_main_dark</item>
        <item name="colorNomeCategoria">@color/nome_categoria_dark</item>
        <item name="colorFabMain">@color/fab_main_dark</item>
        <item name="colorMainBackground">@color/main_background_dark</item>
        <item name="backgroundColorViewAnteprima">@color/background_view_anteprima_dark</item>
        <item name="baseTintColor">@color/base_tint_color_dark</item>
        <item name="colorSitoWeb">@color/testo_sito_web_dark</item>
        <item name="colorIconeDispositivi">@color/icone_dispositivi_dark</item>
        <item name="backgroundAlbum">@drawable/album_dark</item>
    </style>


    <style name="AlertDialogCustomDark" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:colorPrimary" tools:targetApi="lollipop">@color/colorAccent_DarkTheme</item>
        <item name="colorPrimary" tools:targetApi="lollipop">@color/colorAccent_DarkTheme</item>
        <item name="android:colorAccent" tools:targetApi="lollipop">@color/colorAccent_DarkTheme</item>
        <item name="colorAccent" tools:targetApi="lollipop">@color/colorAccent_DarkTheme</item>
        <item name="android:background">@color/sfondo_generale_dark</item>
        <item name="android:textColorPrimary">@color/dialog_text_color_dark</item>
    </style>


    <style name="MyCheckBoxStyleDark" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:textColor">@color/dialog_text_color_dark</item>
    </style>


</resources>
