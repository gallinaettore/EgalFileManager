<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <TextView
            android:id="@+id/textview_da"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="middle"
            android:lines="2"
            android:text="@string/origine"
            />

        <TextView
            android:id="@+id/textview_a"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:ellipsize="middle"
            android:lines="2"
            android:text="@string/destinazione"
            />

        <TextView
            android:id="@+id/textview_nome_file"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:ellipsize="middle"
            android:singleLine="true"
            tools:text="Nome file ewhiei hweiie wdighewi gheiw oivhi olireh  hoi  ohol  hrei vhe oivh roihv 4.mp3"/>

        <ProgressBar
            android:id="@+id/progressbar_file"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textview_percentuale_file"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="@dimen/testo_dimensione_file_dialog_copia"
                tools:text="100%"/>

            <TextView
                android:id="@+id/textview_dimensione_file"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/testo_dimensione_file_dialog_copia"
                tools:text="100KB/12MB"/>
        </LinearLayout>

        <TextView
            android:id="@+id/textview_totale"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="@string/totale"
            />

        <ProgressBar
            android:id="@+id/progressbar_totale"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textview_percentuale_totale"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="@dimen/testo_dimensione_file_dialog_copia"
                tools:text="100%"/>

            <TextView
                android:id="@+id/textview_dimensione_totale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:textSize="@dimen/testo_dimensione_file_dialog_copia"
                tools:text="100KB/12MB"/>

        </LinearLayout>

    </LinearLayout>

</ScrollView>