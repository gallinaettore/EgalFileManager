<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="@dimen/colored_button_radius"/>
            <solid android:color="@color/colored_button_pressed"/>
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="@dimen/colored_button_radius"/>
            <solid android:color="@color/colored_button_pressed"/>
        </shape>
    </item>

    <item android:state_enabled="false">
        <shape android:shape="rectangle"  >
            <corners android:radius="@dimen/colored_button_radius"/>
            <solid android:color="@color/colored_button_disabled"/>
        </shape>
    </item>

    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="@dimen/colored_button_radius"/>
            <gradient android:angle="-90" android:startColor="@color/colored_button_start" android:endColor="@color/colored_button_end" />
        </shape>
    </item>

</selector>